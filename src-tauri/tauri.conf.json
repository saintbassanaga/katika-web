{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Katika",
  "version": "1.0.0",
  "identifier": "cm.katika",
  "build": {
    "frontendDist": "../dist/katika/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "ng serve",
    "beforeBuildCommand": "ng build --configuration production"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Katika",
        "width": 420,
        "height": 860,
        "minWidth": 375,
        "minHeight": 667,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset: blob:; connect-src 'self' http://localhost:8080 ws://localhost:8080 https://api.katika.cm wss://api.katika.cm; img-src 'self' data: blob: tauri: asset:; style-src 'self' tauri: asset: 'unsafe-inline'; script-src 'self' tauri: asset: 'unsafe-inline'; font-src 'self' tauri: asset: data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Finance",
    "shortDescription": "Paiements sécurisés",
    "longDescription": "Katika — Paiements sécurisés au Cameroun",
    "copyright": "© 2025 Katika"
  }
}
